%h1 Create Post
.form
  = form_for post do |f|
    %dt= f.label :title
    %dd= f.text_field :title

    .inline
      %span.inline-fields
        = f.label :course
        = f.select :course_id, options_for_select(courses.collect { |course| [course.course_code.titleize, course.id] }, 1), {}, class: 'form-control'
      %span.inline-fields
        = f.label :publish_date
        = f.date_field :publish_date

    .inline
      %span.inline-fields
        = f.label :image_url
        = f.text_field :image_url
      %span.inline-fields
        = f.label :embedded_url
        = f.text_field :embed_url

    %dt= f.label :description
    %dd= f.text_area :description

    %fieldset.actions
      = f.submit 'Create Post'
