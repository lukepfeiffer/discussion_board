%form.search-bar{role:"search"}
  %input{type:"search", placeholder:"Search Lessons"}
  %button{type:"submit"}
    %i.fa.fa-search

.posts-container
  - posts.each do |post|
    .post
      %h1.title= link_to post.title, post_path(post.id)
      .video
        = link_to post_path(post.id) do
          = image_tag 'placeholder.jpg'
          %i.fa.fa-play
      .description
        = link_to post.description.truncate(500), post_path(post.id)
      - if current_user.present? && current_user.is_admin?
        .actions
          = link_to 'Edit', edit_post_path(post.id), class: 'edit'
          = link_to 'Delete', post_path(post.id), method: :delete, class: 'delete'
      .details
        %p.italic
          = post.user.username
          &bull;
          = post.publish_date.strftime("%B %-d, %Y")
        = link_to root_path do
          %p.course= post.course.course_code
  = will_paginate posts
  %p= @lower_bounds.to_s + " - " + @upper_bounds.to_s
